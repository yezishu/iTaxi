<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dlg_priority" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="c_line">
        <item name="android:background">@color/c_line_degray</item>
    </style>

    <!--标题文本-->
    <style name="C_textAppearance.title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!--标题文本反转色-->
    <style name="C_textAppearance.title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--子标题文本-->
    <style name="C_textAppearance.subhead" parent="TextAppearance.AppCompat.Subhead">
    </style>
    <!--子标题文本反转色-->
    <style name="C_textAppearance.subhead.Inverse" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--文本内容-->
    <style name="C_textAppearance.body" parent="TextAppearance.AppCompat.Body1">
    </style>
    <!--内容文本反转色-->
    <style name="C_textAppearance.body.Inverse" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--备注说明文本-->
    <style name="C_textAppearance.caption" parent="TextAppearance.AppCompat.Caption">
    </style>
    <!--备注说明文本反转色-->
    <style name="C_textAppearance.caption.Inverse" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="c_rv_item">
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginBottom">10px</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
    </style>

    <!--横线-->
    <style name="c_line_horizontal" parent="c_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!--竖线-->
    <style name="c_line_vertical" parent="c_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="c_ActionSheetDialogStyle" parent="android:Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/c_ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="c_ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/c_actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/c_actionsheet_dialog_out</item>
    </style>
    <!-- 头部字体样式 -->
    <style name="c_ETitle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/c_actionsheet_blue</item>
        <item name="android:textSize">@dimen/c_ts_22</item>
    </style>

    <style name="c_AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--列表表单统一样式-->
    <style name="c_ListFormsViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">@color/c_bg_white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">32px</item>
        <item name="android:paddingRight">32px</item>
    </style>
    <style name="c_ListFormsLabelStyle">
        <item name="android:layout_width">150px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/c_text_99gray</item>
        <item name="android:textSize">28px</item>
    </style>
    <style name="c_ListFormsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/c_text_22black</item>
        <item name="android:textColorHint">@color/c_text_99gray</item>
        <item name="android:textSize">28px</item>
    </style>
</resources>