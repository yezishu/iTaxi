<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <yzs.commonlibrary.widget.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_title_height"
        app:tv_back_view="true"
        app:tv_title="用户信息"/>

    <LinearLayout
        style="@style/c_ListFormsViewStyle">

        <TextView
            style="@style/c_ListFormsLabelStyle"
            android:text="姓名"/>

        <TextView
            android:id="@+id/tv_name"
            style="@style/c_ListFormsTextStyle"
            android:maxLength="20"/>
    </LinearLayout>

    <View style="@style/c_line_horizontal"/>

    <LinearLayout
        style="@style/c_ListFormsViewStyle">

        <TextView
            style="@style/c_ListFormsLabelStyle"
            android:text="手机号码"/>

        <TextView
            android:id="@+id/tv_tel"
            style="@style/c_ListFormsTextStyle"
            android:maxLength="20"/>
    </LinearLayout>

    <View style="@style/c_line_horizontal"/>

    <LinearLayout
        style="@style/c_ListFormsViewStyle">

        <TextView
            style="@style/c_ListFormsLabelStyle"
            android:text="驾驶证号"/>

        <TextView
            android:id="@+id/tv_jsz"
            style="@style/c_ListFormsTextStyle"/>

    </LinearLayout>

    <View style="@style/c_line_horizontal"/>

    <LinearLayout
        style="@style/c_ListFormsViewStyle">

        <TextView
            style="@style/c_ListFormsLabelStyle"
            android:text="车牌号"/>

        <TextView
            android:id="@+id/tv_cph"
            style="@style/c_ListFormsTextStyle"/>

    </LinearLayout>

    <View style="@style/c_line_horizontal"/>

    <LinearLayout
        style="@style/c_ListFormsViewStyle">

        <TextView
            style="@style/c_ListFormsLabelStyle"
            android:text="行驶证号"/>

        <TextView
            android:id="@+id/tv_xsz"
            style="@style/c_ListFormsTextStyle"/>

    </LinearLayout>

    <View style="@style/c_line_horizontal"/>

    <LinearLayout
        style="@style/c_ListFormsViewStyle">

        <TextView
            style="@style/c_ListFormsLabelStyle"
            android:text="平台名称"/>

        <TextView
            android:id="@+id/tv_ptmc"
            style="@style/c_ListFormsTextStyle"/>

    </LinearLayout>

    <View style="@style/c_line_horizontal"/>
</LinearLayout>