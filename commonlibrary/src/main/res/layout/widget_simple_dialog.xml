<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/c_commom_dailog_oval_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="56px"
        android:layout_marginRight="56px"
        android:layout_marginTop="42px"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="36px"
        android:visibility="gone"
        tools:text="我是标题啊"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="56px"
        android:layout_marginRight="56px"
        android:layout_marginTop="56px"
        android:gravity="center"
        android:lineSpacingMultiplier="1"
        android:textColor="@color/black"
        android:textSize="32px"
        tools:text="我是内容哦我是内容哦我是内容哦我是内容哦我是内容哦我是内容哦我是内容哦我是内容哦我是内容哦我是内容哦"/>

    <EditText
        android:id="@+id/content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="56px"
        android:layout_marginRight="56px"
        android:layout_marginTop="22px"
        android:textSize="30px"
        android:visibility="gone"
        tools:text="我是输入框"
        tools:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="68px"
        android:background="@color/c_line_degray"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/c_dialog_left_click_selector"
            android:gravity="center"
            android:paddingTop="35px"
            android:paddingBottom="43px"
            android:textColor="@color/colorPrimary"
            android:textSize="36px"
            tools:text="取消"/>

        <View
            android:id="@+id/v_middle"
            style="@style/c_line_vertical"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/c_dialog_right_click_selector"
            android:gravity="center"
            android:paddingTop="35px"
            android:paddingBottom="43px"
            android:textColor="@color/colorPrimary"
            android:textSize="36px"
            tools:text="取消"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>