<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/common_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_color_pressed"
        android:drawableLeft="@drawable/common_back"
        android:drawablePadding="10px"
        android:gravity="center"
        android:minWidth="96px"
        android:paddingLeft="32px"
        android:textColor="@color/c_text_white"
        android:textSize="72px"/>

    <TextView
        android:id="@+id/common_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/c_text_white"
        android:textSize="36px"
        tools:text="qwe"/>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/common_title_right_rl_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/common_tv_right2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_color_pressed"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="20px"
            android:textColor="@color/c_text_white"
            android:textSize="30px"
            android:visibility="gone"
            tools:text="保存"/>

        <TextView
            android:id="@+id/common_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_color_pressed"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="20px"
            android:text="保存"
            android:textColor="@color/c_text_white"
            android:textSize="30px"
            android:visibility="gone"
            tools:visibility="visible"/>


        <ImageView
            android:id="@+id/common_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_add"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="24px"
            android:background="@drawable/bg_color_pressed"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>